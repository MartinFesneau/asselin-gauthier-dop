
<div class="home-background">
</div>
<div class="container">
  <div class="row">
    <div class="col-12 col-lg-12 col-md-12">
      <div id="projects-anchor"></div>
      <div class="logo">
      </div>
      <div class="filters fixed">
          <%= link_to "ALL", projects_path(anchor: "projects-anchor"), class: "#{"active" if params[:category].nil?}" %>
          <%= link_to "CLIPS", projects_path(category: "clip", anchor: "projects-anchor"), class: "#{"active" if params[:category] == "clip"}" %>
          <%= link_to "COMMERCIALS", projects_path(category: "pub", anchor: "projects-anchor"), class: "#{"active" if params[:category] == "pub"}"%>
          <%= link_to "REEL", projects_path(category: "reel", anchor: "projects-anchor"), class: "#{"active" if params[:category] == "reel"}"%>
      </div>

      <div class="projects" id="projects">
        <% @projects.each do |project| %>
        <div data-id="<%= project.id %>">
          <%= render "projects/project", project: project %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
