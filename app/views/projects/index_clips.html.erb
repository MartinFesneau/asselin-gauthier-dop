<div class="container">
<h1 class='title-clip'>Music Videos</h1>
  <div class="row">
    <% @clips.each do |clip| %>
      <div class="col-12 col-mt-8 col-lg-6 col-xl-6" data-aos="fade-in">
        <div class="clip"  style="background-image: url('<%= cl_image_path clip.photos.first.key %>'); background-size: cover;" 
          alt="<% clip.name + " " + clip.artist%>">
          <%= link_to project_path(clip) do  %>
            <div class="background-filter">
              <div class="clip-content">
                <p><%= clip.name %></p>
                <p><%= clip.artist %></p>                      
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
